<!DOCTYPE html>
<html>
  <head>
    <title>RailsMisterCocktail</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  </head>

  <body>
    <div id="navbar" class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "logo.jpg", alt:"Drinks Logo", class: "rounded-circle" %>
      <% end %>
      <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
      </ul>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to "New Cocktail", new_cocktail_path, class: "nav-link" %>
          </li>
        </ul>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
